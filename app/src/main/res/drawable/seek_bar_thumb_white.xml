<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:bottom="2dp" android:left="2dp" android:right="2dp" android:state_pressed="false" android:top="2dp">
        <shape android:shape="rectangle">
            <size android:width="20dp" android:height="20dp" />
            <corners android:radius="90dp" />
            <gradient android:endColor="@color/colorForeground" android:startColor="@color/colorBackground" />
        </shape>
    </item>
    <item android:bottom="2dp" android:left="2dp" android:right="2dp" android:state_pressed="true" android:top="2dp">
        <shape android:shape="rectangle">
            <size android:width="20dp" android:height="20dp" />
            <corners android:radius="90dp" />
            <gradient android:endColor="@color/colorBackground" android:startColor="@color/colorForeground" />
        </shape>
    </item>

</selector>

